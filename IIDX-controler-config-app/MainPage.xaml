<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IIDX_controler_config_app.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Label>Config</Label>
            <Label>Buttons</Label>
            <Grid ColumnDefinitions="*,*" RowDefinitions="auto" ColumnSpacing="15">
                <VerticalStackLayout>
                    <Label>Function button 1</Label>
                    <Picker ItemsSource="{Binding KeyOptions}" ItemDisplayBinding="{Binding Label}"></Picker>
                </VerticalStackLayout>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
